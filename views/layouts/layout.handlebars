<!DOCTYPE HTML>
<html lang="en">
<head>
    <title>LoginApp</title>
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">

    <link href='https://fonts.googleapis.com/css?family=Source Sans Pro' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css?family=PT Sans' rel='stylesheet'>
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,500' rel='stylesheet' type='text/css'>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="/css/bootstrap.css"/>
    <link rel="stylesheet" href="/css/style.css"/>

    <link rel="stylesheet" href="/css/bootstrap-material-datetimepicker.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/css/bootstrap-select.min.css">

    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-form-validator/2.3.26/jquery.form-validator.min.js"></script>
    <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
    <script type="text/javascript" src="http://momentjs.com/downloads/moment-with-locales.min.js"></script>
    <script type="text/javascript" src="/js/bootstrap-material-datetimepicker.js"></script>
    <script type="text/javascript" src="/js/bootstrap.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/js/bootstrap-select.min.js"></script>
</head>

<body id="bootstrap-overrides">

<div class="container">
    <div class="header clearfix">
        <nav>
            <ul class="nav nav-pills pull-right">
                {{#if user}}
                    <li role="presentation"><a id="nav-bar" href="/">Home</a></li>
                    <li role="presentation"><a id="nav-bar" href="/users/relations">Relations</a></li>
                    <li role="presentation"><a id="nav-bar" href="/users/invites">Invites</a></li>
                    <li role="presentation"><a id="nav-bar" href="/users/invite-a-planner">Invite a planner</a></li>
                    <li role="presentation"><a id="nav-bar" href="/users/logout">Log Out</a></li>
                {{else if planner}}
                    <li role="presentation"><a id="nav-bar" href="/">Home</a></li>
                    <li role="presentation"><a id="nav-bar" href="/users/planner-relations">Relations</a></li>
                    <li role="presentation"><a id="nav-bar" href="/users/planner-invites">Invites</a></li>
                    <li role="presentation"><a id="nav-bar" href="/users/requests-main-user">Requests</a></li>
                    <li role="presentation"><a id="nav-bar" href="/users/request-a-main-user">Send request to a main user</a></li>
                    <li role="presentation"><a id="nav-bar" href="/users/logout">Log Out</a></li>
                {{else if admin}}
                    <li role="presentation"><a id="nav-bar" href="/">Home</a></li>
                    <li role="presentation"><a id="nav-bar" href="/users/delete-users">Delete User(s)</a></li>
                    <li role="presentation"><a id="nav-bar" href="/users/logout">Log Out</a></li>
                {{else}}
                    <li role="presentation"><a id="nav-bar" href="/users/login">Log In</a></li>
                    <li role="presentation"><a id="nav-bar" href="/users/register">Register</a></li>
                {{/if}}
            </ul>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-12">
            {{#if success_msg}}
                <div class="alert alert-success">{{success_msg}}</div>
            {{/if}}

            {{#if error_msg}}
                <div class="alert alert-danger">{{error_msg}}</div>
            {{/if}}

            {{#if error}}
                <div class="alert alert-danger">{{error}}</div>
            {{/if}}
            {{{body}}}
        </div>
    </div>

    <footer class="footer">
        <p> &copy; 2017 LoginApp, Arosii</p>
    </footer>

</div> <!-- /container -->
</body>

</html>